<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginTop="0.4dp"
    android:layout_marginBottom="2dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img_user"
                    android:src="@drawable/zero_gender"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/std_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/one"
                    android:text="STD1212"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:capitalize="words"
                    android:paddingLeft="4dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/student_name"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Mohammad Shoaib Ahmed"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/student_shift"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Shift-1"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/student_type"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:text="Student type"
                    android:textColor="#000"
                    android:paddingBottom="6dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/button_bg1"/>

                <LinearLayout
                    android:id="@+id/linear_bt1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_present"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_bg"
                        android:src="@drawable/right"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="1dp" />

                    <ImageView
                        android:id="@+id/img_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_bg"
                        android:src="@drawable/wrong"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_status"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/right"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/img_status_absent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:src="@drawable/wrong"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>
    </LinearLayout>
</LinearLayout>