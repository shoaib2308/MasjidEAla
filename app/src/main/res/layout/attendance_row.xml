<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="2dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/img_user"
                android:src="@drawable/shoaib"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/std_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:gravity="center_horizontal"
                android:text="STD1212"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/edit_stdid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

            <ProgressBar
                android:id="@+id/pBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">



             <TextView
                 android:id="@+id/student_name"
                 android:textSize="14dp"
                 android:textStyle="bold"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14dp"
                 android:layout_marginLeft="2dp"
                 android:text="Mohammad Shoaib Ahmed"
                 android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/student_shift"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Shift-1"
                android:textColor="#000"
                android:layout_margin="3dp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/student_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg1"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="student type"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:capitalize="words"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_bt1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
               >

                <ImageView
                    android:id="@+id/img_present"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/right"
                    android:layout_marginLeft="1dp" />

                <ImageView
                    android:id="@+id/img_absent"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/wrong"
                    android:layout_marginLeft="12dp"
                     />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_status"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/circle_white"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/img_status_absent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:src="@drawable/wrong"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>