<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginTop="0.4dp"
    android:layout_marginBottom="2dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />

    <TextView
        android:id="@+id/student_type"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:text="Student type"
        android:layout_marginRight="15dp"
        android:textColor="#000"
        android:paddingBottom="6dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_bg1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/img_user"
                    android:src="@drawable/man"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/two"
                    android:layout_toRightOf="@+id/two"
                    android:text="1"
                    android:padding="6dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:padding="5dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/one"
                    android:text="Mohammad Shoaib Ahmed"
                    android:textSize="15dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="4dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/student_shift"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Shift-1"
                    android:textColor="#000"/>

               <!-- <TextView
                    android:id="@+id/view_profile"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/two"
                    android:text="view profile" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_course"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_bg"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:text="COURSE"
                        android:layout_marginLeft="1dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_bg"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:text="FEES"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/txt_class"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_bg"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:text="CLASS"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/img_details"
                    android:src="@drawable/right_arrow"
                    android:layout_width="50dp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/two"
                    android:layout_toRightOf="@+id/two"
                    android:text="1"
                    android:padding="6dp"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/fee_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:visibility="invisible"
                    android:textAllCaps="true"
                    android:textColor="#00a78e"
                    android:textSize="15dp" />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>